
worldSettings
{
	windowTitle "Final"
	width 1200
	height 900
	spp 16
}

sceneSettings
{
	backgroundColor [0 0 0]
	#backgroundMusic "ifILoseMyself.mp3"
}

camera
{
	name "camera1"
	eye [0 4 7.5]
	center [0 0 0]
	vup [0 1 0]
	fovy 0.5
	znear 0.1
	zfar 1000
}





node
{
    name "scriptNode"

    script
    {
        type "controllerScript"
    }

    script
    {
        type "physicsScript"
        floatArray gravity 3 [0 -.001 0]
    }

    physicsProperties
    {
        gravity "no"
        solid "no"
        body [0 0 0]
        velocity [0 0 0]
        restitution 1
    }
}



node
{
    name "particleSystem"
    
    translate [4, 0, 0]
    scale [0.5 0.5 0.5]


    physicsProperties
    {
        gravity "no"
        solid "yes"
        body [0.5 0.5 0.5]
        velocity [0 0 0]
        restitution 1
    }

    script
    {
        name "particleScript"
        particleHandler

         name "cubePlanet"
        meshInstance
        {
            name "cubePlanet1"
            mesh "cubeCenter.ply"
            scale [1 1 1]
            translate [0, 0, 0]
            vertexShader "basicVertexShader.vs"
            fragmentShader "phongShading.fs"
            texture uDiffuseTex "hex.png"
            texture uOtherTex "hex.png"
            type mesh
        }
        translate [2, 0, 0]
        scale [0.25 0.25 0.25]

        script
        {
            name orbitScript
            float rotationSpeed -.5
            float radius 3.6
        }

    }
}



light
{
	type "point"
	location [20 30 40]
	color [5 5 5]
    attenuation [1 0 1]
}


light
{
	type "ambient"
	position [0 5 0]
	color [0.9 0.9 0.9]
	direction [0 -1 0]
	attenuation [1 0 1]
	coneAngles [0.39 0.4]
}