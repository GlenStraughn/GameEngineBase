
worldSettings
{
	windowTitle "Final"
	width 1200
	height 900
	spp 16
}

sceneSettings
{
	backgroundColor [0 0 0]
	#backgroundMusic "ifILoseMyself.mp3"
}

camera
{
	name "camera1"
	eye [0 4 7.5]
	center [0 0 0]
	vup [0 1 0]
	fovy 0.5
	znear 0.1
	zfar 1000
}





node
{
    name scriptNode

    script
    {
        type "controllerScript"
    }

    script
    {
        type "physicsScript"
        floatArray gravity 3 [0 -.001 0]
    }

    physicsProperties
    {
        gravity "no"
        solid "no"
        body [0 0 0]
        velocity [0 0 0]
        restitution 1
    }
}



node
{
    name "sun"
    
    translate [0, 0, 0]
    scale [0.5 0.5 0.5]


    physicsProperties
    {
        gravity "no"
        solid "yes"
        body [0.5 0.5 0.5]
        velocity [0 0 0]
        restitution 1
    }

    script
    {
        name "particleScript"
        particleHandler
    }
}



light
{
	type "point"
	location [0 0 0]
	color [5 5 5]
    attenuation [1 0 1]
}


light
{
	type "ambient"
	position [0 5 0]
	color [0.2 0.2 0.2]
	direction [0 -1 0]
	attenuation [1 0 1]
	coneAngles [0.39 0.4]
}