
worldSettings
{
	windowTitle "Final"
	width 1200
	height 900
	spp 16
}

sceneSettings
{
	backgroundColor [0 0 0]
	#backgroundMusic "ifILoseMyself.mp3"
}

camera
{
	name "camera1"
	eye [0 4 20]
	center [0 0 0]
	vup [0 1 0]
	fovy 0.5
	znear 0.1
	zfar 2000
}

camera
{
	name "camera2"
	eye [0 6 -10]
	center [0 0 0]
	vup [0 1 0]
	fovy 0.5
	znear 0.1
	zfar 1000
}


node
{
    name "sunNew"
    meshInstance
    {
        name "sunNew2"
        mesh "sphereCenter.ply"
        scale [1 1 1]
        translate [0, 0, 0]
        vertexShader "basicVertexShader.vs"
        fragmentShader "Shining.fs"
        texture uDiffuseTex "sun.png"
        texture uOtherTex "asteroids.png"
        type mesh
    }
    translate [-1.5, 0, 0]
    scale [0.5 0.5 0.5]

    physicsProperties
    {
        gravity "yes"
        solid "yes"
        body [0.7 0.85 0.85]
        velocity [-0.05 0 0]
        restitution 0.9
    }

}


node
{
    name scriptNode

    script
    {
        type "controllerScript"
    }

    script
    {
        type "physicsScript"
        floatArray gravity 3 [0 0 0]
    }

    physicsProperties
    {
        gravity "no"
        solid "no"
        body [0 0 0]
        velocity [0 0 0]
        restitution 1
    }
}

