
worldSettings
{
	windowTitle "Sprint 2"
	width 1200
	height 900
	spp 16
}

sceneSettings
{
	backgroundColor [0 0 0]
	#backgroundMusic "ifILoseMyself.mp3"
}

camera
{
	name "camera1"
	eye [0 4 7.5]
	center [0 0 0]
	vup [0 1 0]
	fovy 0.5
	znear 0.1
	zfar 1000
}

camera
{
	name "camera2"
	eye [0 6 -10]
	center [0 0 0]
	vup [0 1 0]
	fovy 0.5
	znear 0.1
	zfar 1000
}


node
{
    name "sunNew"
    meshInstance
    {
        name "sunNew2"
        mesh "sphereCenter.ply"
        scale [1 1 1]
        translate [0, 0, 0]
        vertexShader "basicVertexShader.vs"
        fragmentShader "Shining.fs"
        texture uDiffuseTex "sun.png"
        texture uOtherTex "asteroids.png"
        type mesh
    }
    translate [-1.5, 0, 0]
    scale [0.5 0.5 0.5]

    physicsProperties
    {
        gravity "no"
        solid "yes"
        body [0.85 0.85 0.85]
        velocity [-0.025 -0.025 -0.025]
        restitution 1
    }


    script
    {
        type "controllerScript"
    }

    script
    {
        type "physicsScript"
        floatArray gravity 3 [0 -.001 0]
    }
}

node
{
name "sun"
meshInstance
{
name "sun2"
mesh "sphereCenter.ply"
scale [1 1 1]
translate [0, 0, 0]
vertexShader "basicVertexShader.vs"
fragmentShader "Shining.fs"
texture uDiffuseTex "sun.png"
texture uOtherTex "asteroids.png"
type mesh
}
translate [0, 0, 0]
scale [0.5 0.5 0.5]

physicsProperties
{
gravity "no"
solid "yes"
body [0.85 0.85 0.85]
velocity [0.015 0.025 0.03]
restitution 1
}


script
{
type "controllerScript"
}

script
{
type "physicsScript"
floatArray gravity 3 [0 -.001 0]
}
}

light
{
	type "point"
	location [0 0 0]
	color [5 5 5]
    attenuation [1 0 1]
}


light
{
	type "ambient"
	position [0 5 0]
	color [0.2 0.2 0.2]
	direction [0 -1 0]
	attenuation [1 0 1]
	coneAngles [0.39 0.4]
}